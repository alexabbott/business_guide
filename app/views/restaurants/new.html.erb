<script src="http://maps.google.com/maps?file=api&v=2.133d&key=AIzaSyBvl41fmjeaBBlwgySDnKX7xPExYkID5ko" type="text/javascript"></script>
<script>
    var map = null;
    var geocoder = null;

    function initialize() {
      if (GBrowserIsCompatible()) {
        map = new GMap2(document.getElementById("map-canvas"));
        map.setCenter(new GLatLng(34.012982, -118.495186), 17);
        map.addControl(new GSmallZoomControl());
        geocoder = new GClientGeocoder();
        GEvent.addListener(map, "click", clicked);
        map.openInfoWindow(map.getCenter(), "Click&nbsp;map");
      }
    }

    function clicked(overlay, latlng) {
      if (latlng) {
        geocoder.getLocations(latlng, function(addresses) {
          if(addresses.Status.code != 200) {
            alert("reverse geocoder failed to find an address for " + latlng.toUrlValue());
          }
          else {
            address = addresses.Placemark[0];
            var myHtml = address.address;
            map.openInfoWindow(latlng, myHtml);
            document.getElementById('coo').value = myHtml;
          }
        });
      }
    }

    google.maps.event.addDomListener(window, 'load', initialize);
    google.maps.event.addDomListener(window, 'page:load', initialize);
</script>

